<% content_for :title, "Perfis" %>

<div class="flex justify-between items-center mb-6">
  <h1 class="font-bold text-4xl text-blue-500">Perfis</h1>
  <%= link_to "Cadastrar perfil", new_profile_path, class: "rounded-lg py-3 px-5 bg-blue-400 hover:bg-blue-500 text-white block font-medium", data: { turbo_frame: "modal" } %>
</div>

<div id="profiles" class="w-full">
  <% if @profiles.any? %>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-blue-50 dark:bg-gray-700">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium dark:text-blue-50 text-gray-500 uppercase tracking-wider">Nome</th>
          <th class="px-6 py-3 text-left text-xs font-medium dark:text-blue-50 text-gray-500 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium dark:text-blue-50 text-gray-500 uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-slate-700 divide-y divide-gray-200 dark:divide-gray-600">
        <% @profiles.each do |profile| %>
          <tr id="<%= dom_id profile %>">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm dark:text-blue-50 text-gray-900"><%= profile.name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm dark:text-blue-50 text-gray-900"><%= profile.email %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-left text-sm font-medium">
              <%= link_to edit_profile_path(profile), class: "ml-2 rounded-lg py-2 px-4 text-blue-600 hover:bg-gray-100 inline-block font-medium cursor-pointer", data: { turbo_frame: "modal" } do %>
                <%= lucide_icon('file-pen-line', class: 'inline-block text-blue-600 cursor-pointer') %>
              <% end %>
              <%= link_to profile, method: :delete, class: "ml-2 rounded-lg py-2 px-4 text-blue-600 hover:bg-gray-100 inline-block font-medium cursor-pointer", data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" } do %>
                <%= lucide_icon('circle-x', class: 'inline-block text-red-600 cursor-pointer') %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>Nenhum usuário registrado</p>
  <% end %>
</div>
