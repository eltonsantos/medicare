<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-3xl font-bold text-center mb-6 text-blue-600">Cadastrar</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <% if resource.errors.any? %>
        <div id="error_explanation" data-turbo-cache="false" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
          <h2 class="text-lg font-semibold">
            <%= I18n.t("errors.messages.not_saved",
                       count: resource.errors.count,
                       resource: resource.class.model_name.human.downcase) %>
          </h2>
          <ul class="list-disc pl-5 mt-2">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-4">
        <div>
          <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700" %>
          <%= f.input_field :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
        <div>
          <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700" %>
          <%= f.input_field :password, required: true, input_html: { autocomplete: "new-password" }, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          <%= f.hint "MÃ­nimo #{@minimum_password_length} caracteres" if @minimum_password_length %>
        </div>
        <div>
          <%= f.label :password_confirmation, "Confirme a Senha", class: "block text-sm font-medium text-gray-700" %>
          <%= f.input_field :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      </div>

      <div class="mt-6">
        <%= f.button :submit, "Cadastrar", class: "w-full bg-blue-600 text-white py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <% if controller_name != 'sessions' %>
        <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-600 hover:underline mb-2 block" %>
      <% end %>

      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 hover:underline mb-2 block" %>
      <% end %>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-600 hover:underline mb-2 block" %>
      <% end %>

      <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-blue-600 hover:underline mb-2 block" %>
      <% end %>

      <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-blue-600 hover:underline mb-2 block" %>
      <% end %>

      <% if devise_mapping.omniauthable? %>
        <% resource_class.omniauth_providers.each do |provider| %>
          <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full bg-blue-600 text-white py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mb-2 block" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
