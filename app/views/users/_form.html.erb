<%= simple_form_for(@user, html: { class: "contents" }) do |form| %>

  <div class="my-5 text-slate-900">
    <%= form.input :name, label: "Nome", input_html: { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" } %>
  </div>

  <div class="my-5 text-slate-900">
    <%= form.input :email, label: "Email", input_html: { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" } %>
  </div>

  <div class="my-5 text-slate-900">
    <%= form.input :password, label: "Email", input_html: { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" } %>
  </div>

  <div class="my-5 text-slate-900">
    <%= form.input :password_confirmation, label: "Email", input_html: { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" } %>
  </div>

  <% if current_user.admin? %>
    <div class="my-5 text-slate-900">
      <%= form.input :role, as: :select, collection: User.roles.keys.map { |role| [role.titleize, role] }, label: "Regra", prompt: "Selecione o tipo de acesso", required: true, input_html: { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2" }, label_html: { class: "block text-gray-700" } %>
    </div>
  <% end %>

  <div class="inline">
    <%= form.button :submit, @user.new_record? ? "Cadastrar" : "Editar", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
