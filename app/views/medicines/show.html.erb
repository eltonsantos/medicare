<div class="mx-auto md:w-2/3 w-full flex flex-col items-center">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="w-full bg-white shadow rounded-lg p-6">
    <h1 class="font-bold text-4xl text-blue-700 mb-6">Medicine Details</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="my-2">
        <strong class="block font-medium mb-1">Name:</strong>
        <p class="text-gray-700"><%= @medicine.name %></p>
      </div>
      <div class="my-2">
        <strong class="block font-medium mb-1">Unit:</strong>
        <p class="text-gray-700"><%= @medicine.unit %></p>
      </div>
      <div class="my-2">
        <strong class="block font-medium mb-1">Quantity:</strong>
        <p class="text-gray-700"><%= @medicine.quantity %></p>
      </div>
      <div class="my-2">
        <strong class="block font-medium mb-1">Medicine validity:</strong>
        <p class="text-gray-700"><%= @medicine.medicine_validity %></p>
      </div>
      <div class="my-2">
        <strong class="block font-medium mb-1">Medicine insert:</strong>
        <p class="text-gray-700"><%= @medicine.medicine_insert %></p>
      </div>
      <div class="my-2">
        <strong class="block font-medium mb-1">Used to:</strong>
        <p class="text-gray-700"><%= @medicine.used_to %></p>
      </div>
      <div class="my-2">
        <strong class="block font-medium mb-1">Purchase date:</strong>
        <p class="text-gray-700"><%= @medicine.purchase_date %></p>
      </div>
    </div>

    <div class="mt-6">
      <%= link_to "Edit this medicine", edit_medicine_path(@medicine), class: "mt-2 rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium" %>
      <%= link_to "Back to medicines", medicines_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= button_to "Destroy this medicine", @medicine, method: :delete, class: "ml-2 mt-2 rounded-lg py-3 px-5 bg-red-600 text-white font-medium" %>
    </div>
  </div>
</div>
