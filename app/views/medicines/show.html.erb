<%= render "modal", title: "Detalhes" do %>
  <div class="w-full bg-white p-2">
    <div class="space-y-4">
      <div class="border-b border-gray-200 pb-2">
        <strong class="block font-medium mb-1 text-slate-900">Imagem:</strong>
        <% if @medicine.picture.attached? %>
          <%= image_tag url_for(@medicine.picture), class: "w-full max-w-[200px] h-auto object-contain border border-gray-300 rounded-md" %>
        <% else %>
          <%= image_tag "logo-default.png", class: "w-full max-w-[200px] h-auto object-contain border border-gray-300 rounded-md" %>
        <% end %>
      </div>
      <div class="border-b border-gray-200 pb-2">
        <strong class="block font-medium mb-1 text-slate-900">Nome:</strong>
        <p class="text-gray-700"><%= @medicine.name %></p>
      </div>
      <div class="border-b border-gray-200 pb-2">
        <strong class="block font-medium mb-1 text-slate-900">Unidade:</strong>
        <p class="text-gray-700"><%= @medicine.unit %></p>
      </div>
      <div class="border-b border-gray-200 pb-2">
        <strong class="block font-medium mb-1 text-slate-900">É líquido?</strong>
        <p class="text-gray-700">
          <% if @medicine.is_liquid %>
            Sim
          <% else %>
            Não
          <% end %>
        </p>
      </div>
      <div class="border-b border-gray-200 pb-2">
        <strong class="block font-medium mb-1 text-slate-900">Quantidade:</strong>
        <p class="text-gray-700"><%= @medicine.quantity %></p>
      </div>
      <div class="border-b border-gray-200 pb-2">
        <strong class="block font-medium mb-1 text-slate-900">Descrição:</strong>
        <p class="text-gray-700"><%= @medicine.description %></p>
      </div>
      <div class="border-b border-gray-200 pb-2">
        <strong class="block font-medium mb-1 text-slate-900">Validade:</strong>
        <p class="text-gray-700"><%= @medicine.medicine_validity.strftime("%d/%m/%Y") %></p>
      </div>
      <div class="border-b border-gray-200 pb-2">
        <strong class="block font-medium mb-1 text-slate-900">Bula:</strong>
        <% if @medicine.medicine_insert.attached? %>
          <%= link_to url_for(@medicine.medicine_insert), download: true, class: "text-blue-600 hover:underline flex items-center" do %>
            <%= lucide_icon('file-down', class: 'inline-block mr-1 h-5 w-5') %>
          <% end %>
        <% else %>
          <p class="text-gray-700">Nenhuma bula anexada.</p>
        <% end %>
      </div>
      <div class="border-b border-gray-200 pb-2">
        <strong class="block font-medium mb-1 text-slate-900">Sintomas:</strong>
        <p class="text-gray-700">
          <% @medicine.symptoms.each do |symptom| %>
            <span class="inline-block bg-yellow-400 text-white text-sm px-3 py-1 rounded-md">
              <%= symptom.name %>
            </span>
          <% end %>
        </p>
      </div>
      <div class="border-b border-gray-200 pb-2">
        <strong class="block font-medium mb-1 text-slate-900">Usado para:</strong>
        <p class="text-gray-700"><%= @medicine.used_to %></p>
      </div>
    </div>
  </div>
<% end %>
