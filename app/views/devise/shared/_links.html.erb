<% if controller_name != 'sessions' %>
  <%= link_to "Entrar", new_session_path(resource_name), class: "text-blue-600 hover:underline mb-2 block" %>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Cadastrar", new_registration_path(resource_name), class: "text-blue-600 hover:underline mb-2 block" %>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Esqueci minha senha?", new_password_path(resource_name), class: "text-blue-600 hover:underline mb-2 block" %>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Você recebeu as instruções de confirmação?", new_confirmation_path(resource_name), class: "text-blue-600 hover:underline mb-2 block" %>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Você recebeu as instruções para desbloquear?", new_unlock_path(resource_name), class: "text-blue-600 hover:underline mb-2 block" %>
<% end %>

<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full bg-blue-600 text-white py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mb-2 block" %>
  <% end %>
<% end %>
